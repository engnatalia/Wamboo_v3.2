<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".InfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@color/red"
        android:fadeScrollbars="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/intro"
            android:textColor="@color/black"
            android:background="#F3F3F3"
            android:textFontWeight="700"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/body"
            android:textColor="@color/black"
            android:background="#F3F3F3"
            android:textFontWeight="700"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/body2"
            android:textColor="@color/black"
            android:background="#F3F3F3"
            android:textFontWeight="700"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/end"
                android:textColor="@color/black"
                android:background="#F3F3F3"
                android:textFontWeight="700"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/contact1"
                android:textColor="@color/black"
                android:background="#F3F3F3"
                android:textFontWeight="700"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/contact"
                android:autoLink="web|email"
                android:textColor="@color/black"
                android:fontStyle="italic"
                android:background="#F3F3F3"
                android:textFontWeight="700"/>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-6983852485981992/7730687729" />
            <ImageView
                android:id="@+id/planet"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:background="#F3F3F3"
                android:src="@drawable/info_tab"
                android:contentDescription="@null"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>